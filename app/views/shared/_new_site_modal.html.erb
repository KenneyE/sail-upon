<!-- Modal -->
<div class="modal fade" id="new-website-form" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Submit a New Site</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="website-url">URL</label>
                    <input type="text"
                        class="form-control"
                        name="website[url]"
                        id="website-url"
                        placeholder="Enter URL">
                </div>

                <div class="form-group">
                    <label for="website-interest">Related Interest</label>
                    <input type="text"
                        class="form-control"
                        name="website[interest]"
                        id="website-interest"
                        placeholder="Enter Related Interest">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary sail-style-btn">Add Site</button>
            </div>
        </div>
    </div>
</div>